<Window x:Class="AOR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AOR"
        xmlns:customControls="clr-namespace:AOR.View.Controls"
        mc:Ignorable="d"
        Title="Automatic Pipe Organ Registrant" Height="675" Width="1200">
    <Grid Background="Bisque" Margin="0 0 0 0 ">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/> 
            <ColumnDefinition Width="1.8*"/> 
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        
        <customControls:DropDown Grid.Row="0" Grid.Column="2" x:Name= "InputDeviceDropDown"></customControls:DropDown>
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Input Device Name:"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Name="InputName" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding InputDeviceName, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <customControls:SimulatedInputFileDropDown  Grid.Row="0" Grid.Column="3" ></customControls:SimulatedInputFileDropDown>
        
        <customControls:DropDownOutput Grid.Row="1" Grid.Column="2" x:Name= "OutputDeviceDropDown"></customControls:DropDownOutput>
        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Output Device Name:"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Name="OutputName" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding OutputDeviceName, UpdateSourceTrigger=PropertyChanged}"></TextBlock>

        
        <Button Grid.Row="2" Grid.Column="1" Click="ButtonBase_OnClick"></Button>
        
        <customControls:OpenMidiFileDialog Grid.Row="2" Grid.Column="2" x:Name="FileDialog"/>
    </Grid>
</Window>
 